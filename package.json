{
	"name": "personal-portfolio",
	"version": "1.0.0",
	"repository": "git@github.com:MatthewWid/mwidd.com.git",
	"license": "MIT",
	"private": true,
	"author": "Matthew Widdicombe",
	"scripts": {
		"start": "npm-run-all --sequential sass server",
		"dev": "npm-run-all sass --parallel **:watch",
		"sass": "node-sass --output-style compressed ./src/client/scss/ --output ./public/css/",
		"sass:watch": "node-sass --output-style expanded --watch ./src/client/scss/ --output ./public/css/",
		"server": "node ./src/server/start.js",
		"server:watch": "nodemon ./src/server/start.js"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"dotenv": "^6.2.0",
		"express": "^4.16.4",
		"node-sass": "4.12.0",
		"npm-run-all": "^4.1.5",
		"pug": "^2.0.3",
		"serve-favicon": "^2.5.0"
	},
	"devDependencies": {
		"nodemon": "^1.18.9"
	},
	"nodemonConfig": {
		"watch": "./src/",
		"delay": "2000",
		"ext": "js,pug"
	}
}
