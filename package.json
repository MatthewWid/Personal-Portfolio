{
	"name": "mwidd.com",
	"version": "2.0.0",
	"license": "MIT",
	"private": true,
	"repository": "github:MatthewWid/mwidd.com",
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"nodemonConfig": {
		"delay": "2000",
		"ext": "js,ts,pug"
	},
	"scripts": {
		"dev": "npm-run-all --parallel build-dev:watch",
		"build-dev": "webpack --env.env client --env.mode dev",
		"build-dev:watch": "webpack --env.env client --env.mode dev --watch",
		"build-prod": "webpack --env.env client --env.mode prod"
	},
	"devDependencies": {
		"nodemon": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"pug": "^3.0.2"
	}
}
