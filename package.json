{
  "name": "personal-portfolio",
  "version": "1.0.0",
  "repository": "git@github.com:MatthewWid/personal-portfolio.git",
  "license": "MIT",
  "scripts": {
    "sass": "node-sass --output-style compressed ./src/styles/ --output ./public/css/",
    "sass:watch": "node-sass --output-style expanded --watch ./src/styles/ --output ./public/css/",
    "server:watch": "nodemon ./src/server.js",
    "server": "node ./src/server.js",
    "start": "npm run server",
    "dev": "concurrently \"npm run sass:watch\" \"npm run server:watch\""
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "pug": "^2.0.3",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.9"
  }
}
