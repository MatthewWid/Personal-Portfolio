{
  "name": "personal-portfolio",
  "version": "1.0.0",
  "repository": "git@github.com:MatthewWid/mwidd.com.git",
  "license": "MIT",
  "scripts": {
    "sass": "node-sass --output-style compressed ./src/styles/ --output ./public/css/",
    "sass:watch": "node-sass --output-style expanded --watch ./src/styles/ --output ./public/css/",
    "server:watch": "nodemon ./src/server.js",
    "server": "node ./src/server.js",
    "start": "npm-run-all --sequential sass server",
    "dev": "npm-run-all sass --parallel **:watch"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "node-sass": "4.12.0",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.3",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  }
}
